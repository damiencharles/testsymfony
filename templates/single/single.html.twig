{% extends 'base.html.twig' %}

{% block title %}{{produit.nom}}{% endblock %}

{% block body %}
<h1 class="text-center p-5 bg-light" style="font-family: 'Great Vibes', cursive;"><a href="/" class="text-dark">Symfony Sneakers</a></h1>

<div class="container">

    <div class="row text-center d-flex justify-content-center align-items-center my-4">
                    
        <div class='col-12 my-3'>
        <h2>{{produit.nom}}</h2>
        <p >Autres sneakers <a href="categorie/{{categorie.id}}" class="text-danger">{{produit.categorie}}</a></p>
        </div>

        <div class="col-6 d-flex justify-content-center align-self-start ">
            <img src={{produit.image}} class="img-fluid mb-5" alt="">
        </div>

        <div class="col-6 d-flex justify-content-center align-items-center flex-column">
        <p class=" border border-warning p-2">{{produit.description}}</p>
        <p class="font-weight-bold">{{produit.prix}} €</p>
        <small><i> Stock : {{produit.stock}} pièces dispo</i></small><br>
        <a href="#"><button type="button" class="btn btn-outline-warning my-3">Acheter</button></a>
        </div>

        <div class='col-12 my-3'>
        <a href="/"><button type="button" class="btn btn-warning my-2">Retour</button></a>
        </div>
        
    </div>

</div>

{% endblock %}
