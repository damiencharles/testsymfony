{% extends 'base.html.twig' %}

{% block body %}
<h1 class="text-center my-5">Login</h1>
<div class="container">
    <div class="row bg-light">
        <form action="{{path('login')}}" method="post" class="col-8 offset-2 p-5">
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input name="_username" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input name="_password" type="password" class="form-control" id="exampleInputPassword1">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        
        </form>
    
    </div>
</div>

{% endblock %}
